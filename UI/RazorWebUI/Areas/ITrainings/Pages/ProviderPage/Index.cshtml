@page
@model RazorWebUI.Areas.ITrainings.Pages.ProviderPage.IndexModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">MANAGE TRAININGS PROVIDER (@Model.Datas.Count())</h3>

        @if (User.IsInRole("Admin") || User.IsInRole("mSuperAdmin"))
        {
            <a asp-page="./Add" class="btn bg-gradient-warning btn-sm" style="float:right;">New Training Provider</a>
        }
       
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            Title
                        </th>

                        <th>Abbreviation</th>

                        <th>Trainings</th>
                        @if (User.IsInRole("AdminEditor"))
                        {
                            <th>Action</th>
                        }
                        </tr>
                </thead>

                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.Datas)
                    {
                        <tr>

                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                <a asp-page="/Admin/Indexx" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Title)

                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Abbreviation)
                            </td>
                            <td>
                                @item.Training.Count()
                        </td>
                        @if (User.IsInRole("AdminEditor"))
                        {
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">


                                            <a class="dropdown-item" asp-page="./Update" asp-route-id="@item.Id">Edit</a>
 


                                        </div>
                                    </div>
                                </div>


                            </td>
                        }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>