@page
@model RazorWebUI.Areas.ITrainings.Pages.Supervisor.IQuestion.AddModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD NEW PRE TEST/POST TEST QUESTIONS</h3> 
    </div>
    <!-- /.card-header --> 
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Select Section</label>
                        <select asp-for="SupervisorSectionQuestion.SupervisorSectionId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary" asp-items="ViewBag.SupervisorSection">
                            <option value="">Choose</option>
                        </select>

                    </div>
                    <div class="form-group">
                        <label asp-for="SupervisorSectionQuestion.Question" class="control-label"></label>
                        <textarea asp-for="SupervisorSectionQuestion.Question" class="form-control"></textarea>
                        <span asp-validation-for="SupervisorSectionQuestion.Question" class="text-danger"></span>
                    </div>
                     
                    <div class="form-group">
                        <label asp-for="SupervisorSectionQuestion.SortOrder" class="control-label"></label>
                        <input asp-for="SupervisorSectionQuestion.SortOrder" class="form-control" />
                        <span asp-validation-for="SupervisorSectionQuestion.SortOrder" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/lga.js"></script>
}
