@page
@model RazorWebUI.Areas.ITrainings.Pages.Supervisor.IQuestion.IndexModel
@{
    ViewData["Title"] = $"SUPERVISOR QUESTIONS";

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">MANAGE SUPERVISOR QUESTIONS</h3>


        <a asp-page="./Add" class="btn bg-gradient-warning btn-sm" style="float:right;">New Question</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div>

             
            <div class="table-responsive">
                <table id="" class="example-table table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Question
                            </th>

                            <th>SortOrder</th>
                            <th>Section</th>

                        </tr>
                    </thead>

                    @{
                        int sn = 0;
                    }
                    <tbody>
                        @foreach (var item in Model.Datas)
                        {
                            <tr>

                                <td>
                                    @{
                                        sn++;
                                    }
                                    @sn
                                </td>
                                <td>
                                    <a asp-page="./Update" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Question)

                                    </a>
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.SortOrder)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupervisorSection.Title)
                                </td>



                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

     
</div>