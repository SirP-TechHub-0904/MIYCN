@page
@model RazorWebUI.Areas.ITrainings.Pages.Admin.ParticipantCertificateModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            PARTICIPANTS ON @Model.Training.Title ( @Model.Training.StartDate.ToString("ddd dd MMM, yyyy") -
            @Model.Training.EndDate.ToString("ddd dd MMM, yyyy"))
        </h3>


    </div>
    <!-- /.card-header -->
    <form method="post">
        <input asp-for="TrainingId" type="hidden" value="@Model.Training.Id" />
        <div class="card-body">
            <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Fullname
                            </th>

                            <th>Email</th>
                            <th>Phone</th>
                            <th>State</th>

                            <th>Activate Certificate</th>

                        </tr>
                    </thead>

                    @{
                        int sn = 0;
                    }
                    <tbody>
                        @foreach (var item in Model.Datas)
                        {
                            <tr>

                                <td>
                                    @{
                                        sn++;
                                    }
                                    @sn
                                </td>
                                <td>
                                    <a asp-page="/Admin/Info" asp-route-area="User" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.FullnameX)

                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State)
                                </td>
                                <td>
                                    <input type="checkbox" id="@($"CertificateStatus_{item.Id}")" name="@($"CertificateStatus_{item.Id}")" class="" />
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-left: 20px;">Generate/Update Certificate</button>

    </form>
</div>