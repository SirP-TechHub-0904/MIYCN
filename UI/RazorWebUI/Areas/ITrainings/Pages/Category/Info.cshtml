@page
@model RazorWebUI.Areas.ITrainingCategorys.Pages.Category.InfoModel
@{
}

<style>
    .input-group-sm > .custom-select, .input-group-sm > .form-control:not(textarea) {
        height: auto;
    }

    .daiv {
        box-shadow: 0px 11px 35px 0px #c5b5b4;
        padding: 20px;
    }

    .secdaiv {
        box-shadow: 0px 4px 5px 0px #c5b5b4;
        padding: 10px;
    }

    .m-border {
        margin-bottom: 6px;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title">TRAINING CATEGORY MANAGEMENT</h6>

                <a asp-page="./Download" class="btn bg-gradient-warning btn-sm" style="float:right;">Download Report</a>

            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-4 m-border">
                        <a asp-page="./Participants" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-primary" style="width:100%;">Participants (@Model.TrainingCategory.TrainingCategoryParticipants)</a>
                    </div>
                    <div class="col-md-4 m-border">
                        <a asp-page="./Facilitators" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-danger" style="width:100%;">Facilitators/Staff (@Model.TrainingCategory.TrainingCategoryFacilitators)</a>
                    </div>
                    <div class="col-md-4 m-border">
                        <a asp-page="/SponsorPage/Index" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-warning" style="width:100%;">Sponsors (@Model.TrainingCategory.Sponsors)</a>
                    </div>
                    <div class="col-md-4 m-border">
                        <a asp-page="./Activities" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-info" style="width:100%;">Activities (@Model.TrainingCategory.DialyActivities)</a>
                    </div>
                    <div class="col-md-4 m-border">
                        <a asp-page="./Test" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-dark" style="width:100%;">Test Result</a>
                    </div>

                    <div class="col-md-4 m-border">
                        <a asp-page="./TrainingCategoryCertificate" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-success" style="width:100%;">Participant Certificate</a>
                    </div>
                    <div class="col-md-4 m-border">
                        <a asp-page="/Index" class="btn btn-primary" style="width:100%;">Physical/Digital Designs</a>
                    </div>
                    <div class="col-md-4 m-border">
                        <a asp-page="/TimetablePage/Index" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-danger" style="width:100%;">TimeTable</a>
                    </div>
                    <div class="col-md-4 m-border">
                        <a asp-page="/GalleryPage/Index" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-warning" style="width:100%;">Gallery</a>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="row">
                                <div class="col-md-12">
                                    <dl class="row">


                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TrainingCategory.Title)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TrainingCategory.Title)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TrainingCategory.Address)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TrainingCategory.Address)
                                        </dd>



                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TrainingCategory.State)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TrainingCategory.State)
                                        </dd>

                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TrainingCategory.LGA)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TrainingCategory.LGA)
                                        </dd>


                                        <dt class="col-sm-2">
                                            Date
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Model.TrainingCategory.StartDate.ToString("ddd dd MMM, yyyy") -
                                            @Model.TrainingCategory.EndDate.ToString("ddd dd MMM, yyyy")
                                        </dd>
                                        <dt class="col-sm-2">
                                            Dialy Start/Finish Time
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Model.TrainingCategory.DialyStartTime -
                                            @Model.TrainingCategory.DialyEndTime
                                        </dd>

                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TrainingCategory.TrainingCategoryStatus)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TrainingCategory.TrainingCategoryStatus)
                                        </dd>
                                        @if (User.IsInRole("Admin") || User.IsInRole("mSuperAdmin"))
                                        {
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.EnablePreTest)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.EnablePreTest)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.PreTestInstruction)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.PreTestInstruction)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.EnablePostTest)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.EnablePostTest)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.PostTestInstruction)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.PostTestInstruction)
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.EvaluationInstruction)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.Raw(Model.TrainingCategory.PostTestInstruction)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.SignInStartTime)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.SignInStartTime)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.SignInStopTime)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.SignInStopTime)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.SignOutStartTime)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.SignOutStartTime)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.SignOutStopTime)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.SignOutStopTime)
                                            </dd>



                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.PostTestStartTime)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.PostTestStartTime)
                                            </dd>

                                            ////

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateUseRightSidePhysicalSignature)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateUseRightSidePhysicalSignature)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateRightSideSignatureUrl)
                                            </dt>
                                            <dd class="col-sm-10">

                                                <img src="@Model.TrainingCategory.CertificateRightSideSignatureUrl" style="max-height:200px;" />

                                            </dd>



                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateRightSideName)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateRightSideName)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateRightSideOfficePosition)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateRightSideOfficePosition)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateRightSideOfficeTitle)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateRightSideOfficeTitle)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateUseLeftSidePhysicalSignature)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateUseLeftSidePhysicalSignature)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateLeftSideSignatureUrl)
                                            </dt>
                                            <dd class="col-sm-10">

                                                <img src="@Model.TrainingCategory.CertificateLeftSideSignatureUrl" style="max-height:200px;" />

                                            </dd>



                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateLeftSideName)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateLeftSideName)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateLeftSideOfficePosition)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateLeftSideOfficePosition)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateLeftSideOfficeTitle)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateLeftSideOfficeTitle)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateTitle)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateTitle)
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateCourseTitle)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateCourseTitle)
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateAddress)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateAddress)
                                            </dd>

                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TrainingCategory.CertificateDate)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.TrainingCategory.CertificateDate)
                                            </dd>


                                        }
                                    </dl>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>
                @if (User.IsInRole("AdminEditor") || Model.TrainingCategory.TrainingCategoryStatus != Domain.Models.EnumStatus.TrainingCategoryStatus.Completed)
                {
                    <a asp-page="./Update" asp-route-id="@Model.TrainingCategory.Id" class="btn btn-danger btn-sm">Update</a>
                }
            </div>
        </div>
    </div>
</div>
