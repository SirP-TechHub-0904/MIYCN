@page
@model RazorWebUI.Areas.ITrainings.Pages.Admin.UpdateModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE TRAINING</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Training.Id" />

                    <div class="form-group">
                        <label asp-for="Training.Title" class="control-label"></label>
                        <input asp-for="Training.Title" class="form-control" id="upper1" oninput="myUppercase('upper1')" />
                        <span asp-validation-for="Training.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Training.Address" class="control-label"></label>
                        <input asp-for="Training.Address" class="form-control" />
                        <span asp-validation-for="Training.Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Training.State" class="control-label"></label>
                        <input asp-for="Training.State" class="form-control" />
                        <span asp-validation-for="Training.State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.LGA" class="control-label"></label>
                        <input asp-for="Training.LGA" class="form-control" />
                        <span asp-validation-for="Training.LGA" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.Ward" class="control-label"></label>
                        <input asp-for="Training.Ward" class="form-control" />
                        <span asp-validation-for="Training.Ward" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.StartDate" class="control-label"></label>
                        <input asp-for="Training.StartDate" class="form-control" />
                        <span asp-validation-for="Training.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.EndDate" class="control-label"></label>
                        <input asp-for="Training.EndDate" class="form-control" />
                        <span asp-validation-for="Training.EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.DialyStartTime" class="control-label"></label>
                        <input asp-for="Training.DialyStartTime" class="form-control" />
                        <span asp-validation-for="Training.DialyStartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.DialyEndTime" class="control-label"></label>
                        <input asp-for="Training.DialyEndTime" class="form-control" />
                        <span asp-validation-for="Training.DialyEndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.TrainingStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Training.TrainingStatus, new SelectList(Enum.GetValues(typeof(Domain.Models.EnumStatus.TrainingStatus))), new { @class = "form-control" })
                        <span asp-validation-for="Training.TrainingStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.EnablePreTest" class="control-label"></label>
                        <input asp-for="Training.EnablePreTest" />
                        <span asp-validation-for="Training.EnablePreTest" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.PreTestInstruction" class="control-label"></label>
                        <textarea asp-for="Training.PreTestInstruction" class="form-control"></textarea>
                        <span asp-validation-for="Training.PreTestInstruction" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.EnablePostTest" class="control-label"></label>
                        <input asp-for="Training.EnablePostTest" />
                        <span asp-validation-for="Training.EnablePostTest" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Training.PostTestInstruction" class="control-label"></label>
                        <textarea asp-for="Training.PostTestInstruction" class="form-control"></textarea>
                        <span asp-validation-for="Training.PostTestInstruction" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Training.EvaluationInstruction" class="control-label"></label>
                        <textarea asp-for="Training.EvaluationInstruction" class="form-control"></textarea>
                        <span asp-validation-for="Training.EvaluationInstruction" class="text-danger"></span>
                    </div>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("mSuperAdmin"))
                    {

                        <div class="form-group">
                            <label asp-for="Training.SignInStartTime" class="control-label"></label>
                            <input asp-for="Training.SignInStartTime" class="form-control" placeholder="00:00" type="time" />
                            <span asp-validation-for="Training.SignInStartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Training.SignInStopTime" class="control-label"></label>
                            <input asp-for="Training.SignInStopTime" class="form-control" type="time" />
                            <span asp-validation-for="Training.SignInStopTime" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Training.SignOutStartTime" class="control-label"></label>
                            <input asp-for="Training.SignOutStartTime" class="form-control" placeholder="00:00" type="time" />
                            <span asp-validation-for="Training.SignOutStartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Training.SignOutStopTime" class="control-label"></label>
                            <input asp-for="Training.SignOutStopTime" class="form-control" type="time" />
                            <span asp-validation-for="Training.SignOutStopTime" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="Training.SignInStartTime" />
                        <input type="hidden" asp-for="Training.SignInStopTime" />
                        <input type="hidden" asp-for="Training.SignOutStartTime" />
                        <input type="hidden" asp-for="Training.SignOutStopTime" />
                    }

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
