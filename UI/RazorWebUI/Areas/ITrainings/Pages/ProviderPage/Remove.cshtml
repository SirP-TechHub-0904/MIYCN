@page
@model RazorWebUI.Areas.ITrainings.Pages.ProviderPage.RemoveModel
@{
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">REMOVE TRAINING PROVIDER</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Provider.Id" />

                    <div class="form-group">
                        <label asp-for="Provider.Title" class="control-label"></label>
                        <input asp-for="Provider.Title" class="form-control" id="upper1" oninput="myUppercase('upper1')" />
                        <span asp-validation-for="Provider.Title" class="text-danger"></span>
                    </div>

  

                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
