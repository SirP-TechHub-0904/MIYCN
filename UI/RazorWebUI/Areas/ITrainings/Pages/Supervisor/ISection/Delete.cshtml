@page
@model RazorWebUI.Areas.ITrainings.Pages.Supervisor.ISection.DeleteModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DELETE SUPERVISOR SECTION</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SupervisorSection.Id" />
                    <div class="form-group">
                        <label asp-for="SupervisorSection.Title" class="control-label"></label>
                        <textarea asp-for="SupervisorSection.Title" class="form-control"></textarea>
                        <span asp-validation-for="SupervisorSection.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SupervisorSection.Instruction" class="control-label"></label>
                        <textarea asp-for="SupervisorSection.Instruction" class="form-control"></textarea>
                        <span asp-validation-for="SupervisorSection.Instruction" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
